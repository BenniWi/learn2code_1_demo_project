{
"markdown-pdf.styles": [
    "markdown-pdf.css",
  ],
"markdown-pdf.stylesRelativePathFile": true,
"markdown-pdf.highlightStyle": "github.css",
"markdown-pdf.displayHeaderFooter": true,
"markdown-pdf.footerTemplate": "<div style=\"font-size: 8px; color: green; margin-left: auto; margin-right: 30px\"> <span class='pageNumber'></span>/<span class='totalPages'></span></div>",
"markdown-pdf.headerTemplate": " ",


"markdown.styles": [
    "docs/markdown-pdf.css"
  ],

  "cSpell.language": "en,de-de",
  "files.associations": {
    "*.tcc": "c",
    "library.h": "c",
    "errno.h": "c",
    "string.h": "c",
    "stdbool.h": "c"
  },

  "cmake.options.statusBarVisibility": "compact",
  "cmake.configureArgs": ["-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"],

  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[cpp]": {
      "editor.defaultFormatter": "xaver.clang-format"
  },
  "clang-format.executable": "clang-format",

  "clang-tidy.executable": "clang-tidy",
  "clang-tidy.fixOnSave": true,
  "clang-tidy.lintOnSave": true,
  "clang-tidy.compilerArgs": [
      "--config-file=.clang-tidy"
  ],
  "clang-tidy.buildPath": "build",

  "markdown.extension.toc.levels": "2..3",
  
  "markdown-pdf.convertOnSave": true,

  "terminal.integrated.defaultProfile.linux": "bash",
}
